<div class="container">
  <div class="row" style="text-align:center;padding-top:100px">
    <h1>Список всех постов</h1>
  </div>
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Название</th>
          <th scope="col">Текст</th>
          <th scope="col">Действие</th>
        </tr>
      </thead>
      <tbody>
        <% row_num = 1 %>
        <% @articles.each do |article| %>
          <tr>
            <th scope="row"><%= row_num %></th>
            <td><%= article.title %></td>
            <td><%= article.body %></td>
            <td style="width: 18%">
              <%= link_to "Show", article_path(article), class: "d-inline-block m-1 p-2 bg-primary text-white", style: "text-decoration:none;" %>
              <%= link_to "Edit", edit_article_path(article), class: "d-inline-block m-1 p-2 bg-primary text-white", style: "text-decoration:none;" %>
              <%= link_to "Delete", article_path(article), :method => :delete, data: {confirm: "Are you sure?"}, class: "d-inline-block m-1 p-2 bg-danger text-white", style: "text-decoration:none;" %>
            </td>
            <% row_num += 1 %>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>
