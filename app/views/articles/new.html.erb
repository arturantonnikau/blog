<div class="container">
  <div class="row" style="text-align:center;padding-top:100px">
    <h1>Добавление статьи</h1>
  </div>
  <div class="row">
    <%= form_for :articles, url: articles_path do |f| %>
      <div class="mb-3 col-6 offset-3">
        <%= f.label :title, "Заголовок", class: "form-label" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="mb-3 col-6 offset-3">
        <%= f.label :body, "Текс Статьи", class: "form-label" %>
        <%= f.text_area :body, class: "form-control", rows: "10" %>
      </div>
      <%= f.submit "Добавить", class: "btn btn-primary", style: "margin:0 auto;display:block" %>
    <% end %>
  </div>
</div>