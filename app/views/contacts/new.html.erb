<div class="container">
  <div class="row" style="text-align:center;padding-top:100px">
    <h1>Контакты</h1>
  </div>
  <div class="row">
    <%= form_for :contact, url: contacts_path do |f| %>
      <div class="mb-3 col-6 offset-3">
        <%= f.label :email, "Ваш email" , class: "form-label"%>
        <%= f.text_field :email, class: "form-control", id: "email", "aria-describedby": "emailHelp" %>
        <div id="emailHelp" class="form-text">Мы не сообщим Ваш email никому </div>
      </div>
      <div class="mb-3 col-6 offset-3">
        <%= f.label "message", "Сообщение", class: "form-label"%>
        <%= f.text_area :message, class: "form-control", id: "message", rows: "4" %>
      </div>
      <%= f.submit "Отправить", class: "btn btn-primary", style: "margin:0 auto;display:block" %>
    <% end %>
  </div>
</div>